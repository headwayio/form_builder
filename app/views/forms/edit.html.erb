<div class="flex flex-col gap-2 mx-auto pb-8">
  <%= form_with(model: @form, class: "mx-auto w-[700px]", url: form_path(@form)) do |form| %>
    <%= render "form", form: %>
  <% end %>
  <%= link_to "Cancel", form_version_path(@form), class: "text-center transition border border-red-500 hover:bg-red-500 text-red-500 hover:text-white rounded-lg p-4", data: { turbo_method: :delete, turbo_confirm: "Are you sure" } %>
</div>
