<div class="relative w-1/2 mx-auto border border-[#0003] rounded-lg p-4 mb-8">
  <div class="absolute -top-4 w-fit bg-white px-2 text-2xl font-bold"><%= @response.version.form.name %></div>
  <%= form_with(model: @response, url: form_response_path(@response.version.form, @response, page: params[:page])) do |f|  %>
    <%= f.fields_for :answers, @answers do |ff| %>
      <%= render "question", q: ff.object.question, children: ff.object.children, f: ff %>
    <% end %>
    <%= f.submit last_page? ? :Submit : :Next, class: "w-full cursor-pointer mt-6 rounded-lg bg-blue-600 hover:bg-blue-700 text-white py-2 px-4" %>
  <% end %>
</div>
